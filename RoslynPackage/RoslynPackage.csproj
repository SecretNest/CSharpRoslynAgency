<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netstandard2.0;netcoreapp20</TargetFrameworks>
    <PackageId>SecretNest.CSharpRoslynAgency</PackageId>
    <RootNamespace>SecretNest.RoslynAgency</RootNamespace>
    <AssemblyName>RoslynAgency</AssemblyName>
    <Authors>Allen Cui</Authors>
    <Company>SecretNest.info</Company>
    <Product>RoslynAgency</Product>
    <Description>An encapsulated package for building assembly using Roslyn and C#.
NetStandard 2, NetCore 2 and NetFx 4.6 are supported.</Description>
    <Copyright>Allen Cui</Copyright>
    <PackageLicenseUrl>https://github.com/scegg/CSharpRoslynAgency/blob/master/MIT.LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/scegg/CSharpRoslynAgency/</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Version>1.2</Version>
    <PackageReleaseNotes>Fix an issue related to cached assembly with different alias.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net46'">
    <!--<DefineConstants>netfx</DefineConstants>-->
    <AssemblySearchPaths>$(AssemblySearchPaths);{GAC}</AssemblySearchPaths>
  </PropertyGroup>

  <!--<PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <DefineConstants>netstd</DefineConstants>
  </PropertyGroup>-->
      
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="2.4.0" />
  </ItemGroup>

</Project>